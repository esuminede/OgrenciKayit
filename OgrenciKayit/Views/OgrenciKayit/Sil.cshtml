@model OgrenciKayit.Models.Ogrenci

@{
    ViewBag.Title = "Öğrenci Kaydı Sil";
}

<h2>Sil</h2>

<div class="alert alert-warning">
    <strong>Dikkat!</strong>Bu öğrencinin kaydını silmek üzeresiniz:
</div>

<dl class="row">

    <dt class="col-sm-2">Numara</dt>
    <dd class="col-sm-10">@Model.OgrenciNo</dd>

    <dt class="col-sm-2">İsim</dt>
    <dd class="col-sm-10">@Model.Isim</dd>

    <dt class="col-sm-2">Soyisim</dt>
    <dd class="col-sm-10">@Model.Soyisim</dd>
</dl>

@using (Html.BeginForm("Sil", "OgrenciKayit", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.OgrenciNo)
    <p>@Model.Isim @Model.Soyisim kaydını silmek istediğinize emin misiniz?</p>
    <button type="submit" class="btn btn-danger">Sil</button>
    @Html.ActionLink("Vazgeç", "Index", null, new { @class = "btn btn-secondary" })
}